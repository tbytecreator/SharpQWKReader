@using SharpQWKReader.Web.Models;
@model UploadedPackagesListViewModel

@{
    ViewData["Title"] = "Uploaded Packages";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Uploaded QWK Packages</h1>
                <a href="@Url.Action("Index", "QWK")" class="btn btn-secondary">
                    <i class="bi bi-arrow-up"></i> Upload New
                </a>
            </div>

            @if (Model.Packages.Count == 0)
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i>
                    No packages uploaded yet. <a href="@Url.Action("Index", "QWK")">Upload a QWK package</a> to get started.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="bi bi-file-earmark"></i> Filename</th>
                                <th class="text-end"><i class="bi bi-hdd"></i> Size</th>
                                <th><i class="bi bi-calendar-event"></i> Upload Date</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var package in Model.Packages)
                            {
                                <tr>
                                    <td>
                                        <strong>@package.FileName</strong>
                                    </td>
                                    <td class="text-end">
                                        <small class="text-muted">@FormatFileSize(package.FileSize)</small>
                                    </td>
                                    <td>
                                        <small class="text-muted">@package.UploadDate.ToString("yyyy-MM-dd HH:mm:ss")</small>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Package", "QWK", new { packagePath = package.FilePath })" 
                                           class="btn btn-sm btn-primary" 
                                           title="Open package">
                                            <i class="bi bi-folder-open"></i> Open
                                        </a>
                                        <a href="@Url.Action("DeletePackage", "QWK", new { fileName = package.FileName })" 
                                           class="btn btn-sm btn-danger" 
                                           onclick="return confirm('Are you sure you want to delete this package?');"
                                           title="Delete package">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .table-responsive {
        border-radius: 0.375rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .table {
        margin-bottom: 0;
    }

    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .alert {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
</style>

@functions {
    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;

        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }

        return $"{len:0.##} {sizes[order]}";
    }
}
