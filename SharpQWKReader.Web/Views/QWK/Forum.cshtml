@model SharpQWKReader.Web.Models.ForumViewModel

@{
    ViewData["Title"] = "Forum Messages";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h1 class="mb-4">Forum @Model.ForumId - Messages (@Model.Messages.Count)</h1>

            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Subject</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model.Messages)
                        {
                            <tr>
                                <td>@message.Index</td>
                                <td>@message.From</td>
                                <td>@message.To</td>
                                <td>@message.Subject</td>
                                <td>@message.Date @message.Time</td>
                                <td>
                                    <a href="@Url.Action("Message", new { messageNumber = message.Index })" class="btn btn-sm btn-info">
                                        Read
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Upload</a>
            </div>
        </div>
    </div>
</div>
